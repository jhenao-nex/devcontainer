{
	"name": "kuma-k8s",
	"dockerComposeFile": "docker-compose.yml",
	"service": "kuma-k8s",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "enabled": true,
      "minikubeDriver": "docker",
      "minikubeNodeCount": 2,
      "minikubeK8sVersion": "1.22.0",
      "minikubeIngress": true,
      "minikubeRegistry": true,
      "kubectlVersion": "1.22.0",
      "minikubeVersion": "1.23.2",
      "kubectlAliases": true,
      "kumaVersion": "1.11.0",
      "kumactlVersion": "1.11.0",
      "helmVersion": "3.7.0",
      "helmAliases": true
    },
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dockerComposeVersion": "1.29.2",
      "dockerComposeAliases": true,
      "dockerComposeCompletion": true,
      "dockerComposeBashCompletion": true,
      "dockerComposeZshCompletion": true,
      "dockerComposeFishCompletion": true,
      "dockerComposePowershellCompletion": true
    },
    "ghcr.io/eliises/devcontainer-features/bash-profile:1.0.1" : {
      "bashProfileAliases": true,
      "bashProfileVersion": "1.0.0"
    }
  },
  "forwardPorts": [
		3000,
    3001,
    3002,
    3003,
		7007,
		8080,
    8081,
    8082,
    8083
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-ossdata.vscode-postgresql",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
			],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    }
    }
  },
  "postCreateCommand": "echo 'Contenedor listo!' && sudo service docker start || echo 'Docker ya est√° corriendo'"
  //"remoteUser": "arheanja"
}
  